env:
    browser: true
 
rules:
 
    brace-style: [2, "stroustrup"]
    comma-style: [2, "last"]
    default-case: 2
    guard-for-in: 2
    no-console: 0
    no-floating-decimal: 2
    no-nested-ternary: 2
    no-undef: 2
    no-underscore-dangle: 0
    quotes: [2, "double"]
    radix: 2
    space-after-keywords: [2, "always"]
    indent: [2, 2, {"SwitchCase": 1}]
    space-before-blocks: 2
    space-before-function-paren: [2, { "anonymous": "always", "named": "never" }]
    spaced-comment: [2, "always", {exceptions: ["-"]}]
    wrap-iife: 2
 
globals:
    define: true
    require: true
    requirejs: true
    process: true
    module: true
    console: true
    __dirname: true
    Buffer: true
    Git: true
    global: true