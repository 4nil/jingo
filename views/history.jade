extends layout

block content
  #content.show
    h2 #{title}:&nbsp;
      b.page-param #{pageTitle}
    p
      button(id="rev-compare", data-pageName="#{pageName}").btn.btn-primary Compare revisions

    table.history.table.table-striped.table-bordered.table-hover.table-condensed
      each item in items
        tr
          td
            input(type="checkbox", value="#{item.fullhash}")
          td
            if item.email
              img(src=gravatar().url("#{item.email}", {s:16}))
            |&nbsp; #{item.author}
          td #{item.relDate}
          td #{item.subject}
          td
            a(href="/wiki/#{item.name}/#{item.hashRef}") #{item.hashRef || 'CURRENT'}
