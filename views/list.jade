extends layout

block content
  #content.show
    h1 #{title}
    ul.doc-list
      each item in items
        li
          h4
            a(href="/wiki/#{item.metadata.name}") #{item.pageTitle}
          div.content.clearfix
            .meta
              |Last update by&nbsp;
              if item.metadata.email
                img(src=gravatar().url("#{item.metadata.email}", {s:16}))
              b &nbsp;#{item.metadata.author},&nbsp;
              b.date(title="#{item.metadata.date}") #{item.metadata.relDate}
              |&nbsp;&ndash;&nbsp;#{item.metadata.hash}
            ul.page-actions.pull-right
              if !isAnonymous()
                li
                  a(href="/pages/#{item.metadata.name}/edit", title="Edit this page").btn.btn-default
                    i.icon.ion-compose
              li
                a(href="/wiki/#{item.metadata.name}/history", title="Page history").btn.btn-default
                  i.icon.ion-clock
              if item.hashes
                li
                  a(href="/wiki/#{item.metadata.name}/compare/" + item.hashes, title="Quick diff").btn.btn-default
                    i.icon.ion-shuffle
            .message
              &rarr; #{item.message}
